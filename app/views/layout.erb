<!DOCTYPE html>
<html>
  <head>
    <title>Chitter</title>
    <script src="//assets.codepen.io/assets/editor/live/console_runner-d0a557e5cb67f9cd9bbb9673355c7e8e.js"></script>

    <script src="//assets.codepen.io/assets/editor/live/events_runner-21174b4c7273cfddc124acb0876792e0.js"></script>

    <script src="//assets.codepen.io/assets/editor/live/css_live_reload_init-7618a0de08795409d8f6c9ef6805f7b2.js"></script>
    <meta charset="UTF-8">
    <meta name="robots" content="noindex">
    <link rel="canonical" href="https://codepen.io/magnificode/pen/rLedYG">
    <link rel="stylesheet prefetch" href="//codepen.io/assets/reset/normalize.css">


    <link rel='stylesheet' type='text/css' href='css/bees.css' media='screen' />
    <link rel='stylesheet' type='text/css' href='css/flower.css' media='screen' />

  </head>

  <body>
    <%= partial :flower %>
    <script src="//assets.codepen.io/assets/common/stopExecutionOnTimeout.js?t=1"></script>
    <script src="https://code.jquery.com/jquery-2.2.4.min.js"></script>
    <script src="https://code.jquery.com/jquery-2.2.4.min.js"></script>
    <script src="js/flower.js"></script>

    <% if flash[:notice] %>
      <%= flash[:notice] %>
    <% end %>

    <% if current_user && !flash[:errors] %>
      <form action='/sessions' method='post'>
        <input type='hidden' name='_method' value='delete'>
        <input type='submit' value='Sign Out'>
      </form>
      <h2>Welcome <%= current_user.user_name%></h2>
    <% end %>

    <% if flash[:errors] %>
      <% flash[:errors].each do |error| %>
        <h5><%= error %></h5>
      <% end %>
    <% end %>

    <%= yield %>

  </body>
</html>